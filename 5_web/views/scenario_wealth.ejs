<% include ./layout %>

<div class="container-fluid">


  <div class="row content">
    
    

    <div class="col-sm-9">
      <h2>Wealth VS. Positive/Negative attitudes</h2>
      <hr/>
      <h3>Aurin Data Analysis</h3>

      <div id="salaryContainer" style="height: 300px; width: 100%;"></div>
      <hr/>
      <h3> Tweets Data Analysis</h3>
          <div id="indexContainer" style="height: 300px; width: 100%;"></div>

     
    </div>
  </div>
</div>
<script>


var chart1 = new CanvasJS.Chart("salaryContainer", {
    animationEnabled: true,
    theme: "light2", // "light1", "light2", "dark1", "dark2"
    title:{
        text: "State Average Weekly Income"
    },
    axisY: {
        title: "Avg Income"
    },
    data: [{        
        type: "column",  
        showInLegend: true, 
        legendMarkerColor: "grey",
        legendText: "States",
        dataPoints: [      
            { y: <%=nss%>, label: "NSW" },
            { y: <%=qus%>,  label: "QLD" },
            { y: <%=sas%>,  label: "SA" },
            { y: <%=vis%>,  label: "VIC" },
            { y: <%=was%>,  label: "WA" },
            { y: <%=tas%>, label: "TAS" },
            { y: <%=nts%>,  label: "NT" }
        ]
    }]
});






var chart2 = new CanvasJS.Chart("indexContainer", {
    animationEnabled: true,
    theme: "light2", //"light1", "dark1", "dark2"
    title:{
        text: "Twitter Index"             
    },
    axisY:{
        interval: 10,
        suffix: "%"
    },
    toolTip:{
        shared: true
    },
    data:[{
        type: "stackedBar100",
        toolTipContent: "{label}<br><b>{name}:</b> {y} ",
        showInLegend: true, 
        name: "Positive",
        dataPoints: [
            { y: <%=nsh%>, label: "NSW" },
            { y: <%=quh%>, label: "QLD" },
            { y: <%=sah%>, label: "SA" },
            { y: <%=vih%>, label: "VIC" },
            { y: <%=wah%>, label: "WA" },
            { y: <%=tah%>, label: "TAS" },
            { y: <%=nth%>, label: "NT" }
        ]
        },
        {
            type: "stackedBar100",
            toolTipContent: "<b>{name}:</b> {y} ",
            showInLegend: true, 
            name: "Negative",
            dataPoints: [
                { y: 1-<%=nsh%>, label: "NSW" },
            { y: <%=qun%>, label: "QLD" },
            { y: <%=san%>, label: "SA" },
            { y: <%=vin%>, label: "VIC" },
            { y: <%=wan%>, label: "WA" },
            { y: <%=tan%>, label: "TAS" },
            { y: <%=ntn%>, label: "NT" }
            ]
        } 
       ]
});
chart1.render();
chart2.render();


</script>